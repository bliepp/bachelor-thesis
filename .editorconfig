# EditorConfig after https://EditorConfig.org

root = true

[*]
# all files, unix-style line endings
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
# PEP 8
charset = utf-8
indent_style = space
indent_size = 4

[*.{c,cpp,cc,h,hpp}]
# kernel.org style
indent_style = tab
indent_size = 8

[*.{plt,g,gnuplot}]
# gnuplot files
indent_style = tab
indent_size = 4

[*.{dat,cna}]
# generic data files in tabular style
indent_style = tab
indent_size = 12

[*.{tex,cls}]
# LaTeX
indent_style = tab
indent_size = 4

[*.{bst,sty}]
# LaTeX and BibTeX styles
insert_final_newline = false
